<section class="book-simple">
  <div class="container">
    <header class="book-simple-header">
      <a class="hero-back" href="/book">← Shop for another flight</a>
      <h1>Flight booked!</h1>
      <p>Your receipt has been emailed. This is not a boarding pass.</p>
    </header>

    <div class="summary-card" style="margin-bottom:10px;">
      <div class="itinerary-line">
        <div class="leg">
          <div><span class="time">{{fromCode}}</span> <span class="code">{{fromCity}}</span> <span class="arrow">→</span> <span class="time">{{toCode}}</span> <span class="code">{{toCity}}</span></div>
        </div>
      </div>
      <div class="passenger" style="margin-top:8px;">Passenger: <strong>{{name}}</strong></div>
    </div>

    <div class="purchase-grid">
      <div class="summary-card">
        {{> purchase/summary summary}}
      </div>
      <aside class="price-card">
        {{> purchase/totalPrice totals}}
      </aside>
    </div>
  </div>
</section>