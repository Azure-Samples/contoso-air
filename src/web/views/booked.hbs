<section class="book-simple">
    <div class="container">
        <header class="book-simple-header">
            <a class="hero-back" href="/book">← Shop for another flight</a>
            {{#if flights}}
                <h1>Booked flights</h1>
                <p>Your booked itineraries are listed below.</p>
            {{else}}
                <h1>No booked flights</h1>
                <p>You don’t have any bookings yet.</p>
            {{/if}}
        </header>
        {{#if flights}}
            {{#each flights}}
                <div class="purchase-grid">
                    <div class="summary-card">
                        {{> purchase/summary}}
                    </div>
                    <aside class="price-card">
                        {{> purchase/totalPrice (hash price=total passengers=passengers)}}
                    </aside>
                </div>
            {{/each}}
            <div class="bm-actions" style="margin-top: 10px;">
                <a class="btn-accent" href="/book">Get another flight</a>
            </div>
        {{/if}}
    </div>
</section>