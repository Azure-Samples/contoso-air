<section class="auth-simple">
  <div class="container">
    <header class="auth-header">
      <h1>{{i18n "Login.Title"}}</h1>
      <p>Access your account to continue your booking.</p>
    </header>
    <div class="auth-card">
      <form action="/login" method="POST" class="auth-form">
        <div class="auth-field">
          <label for="username">{{i18n "Login.Username"}}</label>
          <input
            id="username"
            name="username"
            type="text"
            autocomplete="username"
          />
        </div>
        <div class="auth-field">
          <label for="password">{{i18n "Login.Password"}}</label>
          <input
            id="password"
            name="password"
            type="password"
            autocomplete="current-password"
          />
        </div>
        {{#if errors}}
          <div class="auth-error" role="alert">
            {{#each errors}}
              <span>{{i18n this}}</span>{{#unless @last}}<br />{{/unless}}
            {{/each}}
          </div>
        {{/if}}
        <input type="hidden" name="returnTo" value="{{returnTo}}" />
        <div class="auth-actions">
          <button class="btn-accent" type="submit">Log in</button>
        </div>
      </form>
    </div>
  </div>
</section>