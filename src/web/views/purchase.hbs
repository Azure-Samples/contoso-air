<section class="book-simple">
    <div class="container">
        <header class="book-simple-header">
            <a class="hero-back" href="/book">‚Üê Shop for another flight</a>
            <h1>Flight summary</h1>
            <p>Please review your details before confirming your booking.</p>
        </header>
        <form action="/book/purchase" method="POST" class="book-modern">
            <div class="purchase-grid">
                <div class="summary-card">
                    <div class="passenger">Passenger: <strong>{{name}}</strong></div>
                    {{> purchase/summary summary}}
                </div>
                <aside class="price-card">
                    {{> purchase/totalPrice totals}}
                </aside>
            </div>
            <div class="bm-actions" style="margin-top: 10px; gap:8px;">
                <input name="departure" type="hidden" value="{{summary.departure.id}}">
                <input name="returning" type="hidden" value="{{summary.returning.id}}">
                <input name="passengers" type="hidden" value="{{totals.passengers}}">
                <input class="bm-submit" type="submit" value="Purchase">
                <a class="btn-outline" href="/book">Cancel</a>
            </div>
        </form>
    </div>
</section>