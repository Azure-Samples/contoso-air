<div class="book-modern">
    <form action="/book" method="POST" class="bm-form">
        <div class="bm-topbar">
            {{#if kinds}}
            <div class="bm-segment" role="tablist" aria-label="Trip type">
                {{#each kinds}}
                    <span class="bm-segment-item {{#if active}}active{{/if}}" role="tab">{{text}}</span>
                {{/each}}
            </div>
            {{/if}}
            <div class="bm-field bm-field--sm">
                <label for="passengers" class="sr-only">Passengers</label>
                <select id="passengers" name="passengers" aria-label="Passengers" title="Passengers">
                    <option value="" disabled selected>Passengers</option>
                    {{#each passengers}}
                        <option>{{this}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

        <div class="bm-row">
            <div class="bm-field">
                <label for="fromCode">From</label>
                <select id="fromCode" name="fromCode" required>
                    <option value="" disabled selected>Select departure</option>
                    {{#if airportsByCountry}}
                        {{#each airportsByCountry}}
                            <optgroup label="{{country}}">
                                {{#each airports}}
                                    <option value="{{code}}">{{city}} ({{code}})</option>
                                {{/each}}
                            </optgroup>
                        {{/each}}
                    {{else}}
                        {{#each airports}}
                            <option value="{{code}}">{{city}} ({{code}})</option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>
            <div class="bm-field">
                <label for="toCode">To</label>
                <select id="toCode" name="toCode" required>
                    <option value="" disabled selected>Select destination</option>
                    {{#if airportsByCountry}}
                        {{#each airportsByCountry}}
                            <optgroup label="{{country}}">
                                {{#each airports}}
                                    <option value="{{code}}">{{city}} ({{code}})</option>
                                {{/each}}
                            </optgroup>
                        {{/each}}
                    {{else}}
                        {{#each airports}}
                            <option value="{{code}}">{{city}} ({{code}})</option>
                        {{/each}}
                    {{/if}}
                </select>
            </div>
        </div>

    <div class="bm-row">
            <div class="bm-field">
                <label for="dpa">Depart date</label>
                <input class="datepicker" id="dpa" name="dpa" data-start="{{today}}" placeholder="yyyy-mm-dd" autocomplete="off" />
            </div>
            <div class="bm-field">
                <label for="dpb">Return date</label>
                <input class="datepicker" id="dpb" name="dpb" data-start="{{today}}" placeholder="yyyy-mm-dd" autocomplete="off" />
            </div>
        </div>

        <div class="bm-actions">
            <button class="bm-submit" type="submit">Find flights</button>
        </div>
    </form>
</div>