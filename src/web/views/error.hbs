<section class="book-simple">
  <div class="container">
    <header class="book-simple-header">
      <h1>Something went wrong</h1>
      <p>{{message}}</p>
    </header>
    <div class="error-card">
      {{#if error.status}}
        <p class="error-meta">Status: {{error.status}}</p>
      {{/if}}
      {{#if error.stack}}
        <details class="error-details" open>
          <summary>Technical details</summary>
          <pre>{{error.stack}}</pre>
        </details>
      {{/if}}
      <div class="bm-actions" style="gap:8px;">
        <a class="btn-outline" href="/">Go to homepage</a>
        <a class="btn-accent" href="/book">Change your search</a>
      </div>
    </div>
  </div>
</section>